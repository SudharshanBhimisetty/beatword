<%- include("partials/header") %>

    <body class="bg-dark text-white ">
       <header class="text-center p-2 mb-2">
             <h2>WordBeater</h2>
           </header>
		
         <div class="container-fluid text-center">

            <div id="stripe" class="row">
                <div class="col-md-8 mx-auto d-flex justify-content-around">
                    <span id = "main">
                      <button class="buttons" id = "start-game">Start Game</button>
                      <button class="buttons" id = "end-game">End Game</button>
                    </span>
                    <span id = "level">
                      <button class="buttons" id = "hard-game">Hard</button>
                      <button class="buttons selected" id = "easy-game">Easy</button>
                    </span>  
                </div>
            </div>
 

           <div class="row">
            <div class="col-md-6 mx-auto">
              <p class="lead mt-5">Type The Given Word Within
                <span class="text-success" id="seconds">5</span> Seconds:</p>
      

        <h2 class="display-5 mb-3" id="current-word">Hello</h2>
        <input type="text" class="form-control form-control-lg mx-auto" placeholder="Type the word here" id="input-word">
        <h4 class="mt-3" id="message"></h4>

        <div class="row mt-3">
            <div class="col-md-6">
               <h4>Time left: <span id="time-left">5</span></h4>
            </div>
            <div class="col-md-6">
               <h5>Score: <span id="score">0</span></h5>    
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-6">
               <h5>Previous Game Score: <span id="previous-score">0</span></h5>
            </div>
            <div class="col-md-6">
               <h5>High Score: <span id="high-score">0</span></h5>    
            </div>
        </div>

<!--         <div>
            <h5>Previous Game Score: <span id="previous-score">0</span></h5>
            <h5>High Score: <span id="high-score">0</span></h5>
          </div -->    
        
        <div class="row mt-3">
            <div class="col-md-12">
              <div class="card card-body bg-secondary text-white">
                <h5>Instructions</h5>
                <p>Type each word in the given amount of seconds to score.</p>
              </div>
            </div>
          </div>

        <div class="row">
            <div class="col-md-6 mt-4 mx-auto">Made-By Siddu</div>
        </div>


        </div>
      </div>
    </div>


<%- include("partials/footer") %>